<body>
    
    <div class="container">
        <h4><%= category.title %></h4>

        <% articles.forEach((article)=>{ %>
            <div class="card">

                <div class="card-header">
                    <h4><%= article.title %></h4>
                </div>
                <div class="card-body">
                    <%- article.body %>
                </div>
                <div class="card-footer">
                    <a href="/<%= article.slug %>" class="btn btn-outline-success">Ler artigo</a>
                </div>
        
            </div>
        <% }) %>

    </div>

</body>

